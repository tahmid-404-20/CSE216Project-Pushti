    <div
      style="
        text-align: center;
        padding-left: 25%;
        padding-right: 25%;
        padding-top: 2%;
      "
    >
      <h4>Send Feedback</h4>
      <div
        class="alert alert-dismissible alert-success"
        id="success"
        style="display: none"
      >
        <button type="button" class="btn-close" onclick="cls2()"></button>
        Feedback sent!
      </div>
      <div
        class="alert alert-dismissible alert-danger"
        id="errormsg"
        style="display: none"
      >
        <button type="button" class="btn-close" onclick="cls1()"></button>
        Something went wrong! Try again!
      </div>
      <form id="form" style="padding-top: 2%" method="post">
        <div class="form-outline mb-4">
          <textarea
            id="feedback"
            name="feedback"
            class="form-control"
            placeholder="Feedback..."
            required
          ></textarea>
        </div>
        <div class="form-outline mb-4">
          <button
            id="submit"
            type="button"
            class="btn btn-warning btn-lg ms-2"
            onclick="send()"
          >
            Send
          </button>
        </div>
      </form>
    </div>
    <script>
      async function postData(url = "", data = {}) {
        // Default options are marked with *
        const response = await fetch(url, {
          method: "POST", // *GET, POST, PUT, DELETE, etc.
          mode: "cors", // no-cors, *cors, same-origin
          cache: "no-cache", // *default, no-cache, reload, force-cache, only-if-cached
          credentials: "same-origin", // include, *same-origin, omit
          headers: {
            "Content-Type": "application/json",
            // 'Content-Type': 'application/x-www-form-urlencoded',
          },
          redirect: "follow", // manual, *follow, error
          referrerPolicy: "no-referrer", // no-referrer, *no-referrer-when-downgrade, origin, origin-when-cross-origin, same-origin, strict-origin, strict-origin-when-cross-origin, unsafe-url
          body: JSON.stringify(data), // body data type must match "Content-Type" header
        });

        return response.json(); // parses JSON response into native JavaScript objects
      }

      function cls1() {
        document.getElementById("errormsg").style.display = "none";
      }

      function cls2() {
        document.getElementById("success").style.display = "none";
      }

      function res() {
        document.getElementById("feedback").value = "";
      }

      function send() {
        cls1();
        cls2();
        let feed = document.getElementById("feedback").value;
        if (feed == "") {
          alert("Please write something!");
          return;
        }
        postData("sendfeedback/insert-feedback", { details: feed }).then(
          (data) => {
            if (data.status) {
              res();
              document.getElementById("success").style.display = "block";
            } else {
              document.getElementById("errormsg").style.display = "block";
            }
          }
        );
      }
    </script>
    <script
      src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
